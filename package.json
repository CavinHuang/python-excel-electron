{
  "name": "pyhone-excel-electron",
  "version": "1.0.1",
  "description": "",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"pnpm run start:react\" \"pnpm run start:electron\"",
    "start:react": "cd frontend && pnpm run dev",
    "start:electron": "cross-env NODE_ENV=development electron .",
    "build": "pnpm run build:python && pnpm run build:frontend && pnpm run build:electron",
    "build:electron": "electron-builder build --win --mac",
    "build:frontend": "cd frontend && pnpm run build",
    "build:python": "cd backend && python -m PyInstaller ./api.spec --clean --distpath ./pydist",
    "package": "electron-builder build --win --linux --mac -c.extraMetadata.main=electron/main.js",
    "build:win32": "electron-builder --win --ia32",
    "build:icon": "electron-icon-builder --input=./public/excel.png --output=public --flatten"
  },
  "build": {
    "appId": "com.pyhone-excel-electron-tool",
    "productName": "Excel自动化处理工具",
    "copyright": "Copyright © 2024 cavin",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "artifactName": "Excel自动化处理工具_setup_${version}.exe",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "guid": "com.pyhone-excel-electron-tool",
      "allowToChangeInstallationDirectory": true,
      "include": "installer.nsh",
      "allowElevation": true
    },
    "files": [
      "frontend/dist/**/*",
      "electron/**/*",
      "backend/pydist/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    },
    "asarUnpack": [
      "**/pydist/api/**/*"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "21.0.0",
    "electron-builder": "^24.13.3",
    "electron-icon-builder": "^2.0.1",
    "wait-on": "^8.0.0"
  }
}
